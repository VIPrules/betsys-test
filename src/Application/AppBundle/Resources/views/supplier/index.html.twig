{% extends '@App/supplier/supplier_base.html.twig' %}

{% block content %}
    <header>
        <h2>Supplier list</h2>
        <h3>Sorted by id</h3>
    </header>
    <ul>
        {% for supplier in suppliers %}
            <li><a href="{{ url('supplier_view', {'id': supplier.id}) }}">{{ supplier.name }}</a></li>
            <li><ul>
                    {% for group in supplier.groups %}
                        <li><a href="{{ url("group_view", {'id': group.id}) }}">{{ group.name }}</a></li>
                    {% endfor %}
                </ul></li>
        {% endfor %}
    </ul>
{% endblock %}